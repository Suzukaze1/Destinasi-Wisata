<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.pengguna.misc.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_tentang_kami"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="@string/todo" />
        </RelativeLayout>

        <RelativeLayout
            android:padding="10dp"
            android:background="@drawable/bg_dashboard_reverse"
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <TextView
                android:fontFamily="@font/nexalight"
                android:id="@+id/tv01"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:text="@string/profil_aplikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/nexalight"
                android:id="@+id/tv02"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv01"
                android:text="@string/deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:fontFamily="@font/nexalight"
                android:layout_marginStart="10dp"
                android:textColor="#ffffff"
                android:textSize="21sp"
                android:layout_marginTop="30dp"
                android:text="@string/temukan_kami"
                android:layout_below="@+id/tv02"
                android:id="@+id/tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/telefon"
                android:layout_below="@+id/tv03"
                android:id="@+id/imgTelp001"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:fontFamily="@font/nexalight"
                android:textColor="#ffffff"
                android:id="@+id/tv04"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:text="@string/nomor_hp"
                android:layout_below="@+id/tv03"
                android:layout_toEndOf="@+id/imgTelp001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="14dp"
                android:src="@drawable/email"
                android:layout_below="@+id/imgTelp001"
                android:id="@+id/imgEmail001"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:textColor="#ffffff"
                android:fontFamily="@font/nexalight"
                android:id="@+id/tv05"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="@string/email_dinas"
                android:layout_below="@+id/tv04"
                android:layout_toEndOf="@+id/imgEmail001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="14dp"
                android:src="@drawable/location"
                android:layout_below="@+id/imgEmail001"
                android:id="@+id/imgLokasi001"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

            <TextView
                android:textColor="#ffffff"
                android:fontFamily="@font/nexalight"
                android:layout_marginTop="24dp"
                android:text="@string/alamat_dinas"
                android:layout_below="@+id/tv05"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/imgLokasi001"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>



</ScrollView>