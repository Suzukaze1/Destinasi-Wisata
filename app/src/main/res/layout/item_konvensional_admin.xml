<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/et_bg"
    android:padding="16dp"
    android:id="@+id/container1">

    <ImageView
        android:background="@drawable/loading_shape"
        android:id="@+id/imgThumb"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:fontFamily="@font/nexalight"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:background="#D84416"
        android:text="@string/w_konvensional"
        android:layout_marginStart="26dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/konvensionall"
        android:layout_toEndOf="@+id/imgThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/nexabold"
        android:layout_marginTop="5dp"
        android:textColor="#D84416"
        android:layout_below="@+id/konvensionall"
        android:text="@string/nama_homestay"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/tvHomestay"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/imgThumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:text="@string/deskripsi_homestay"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/imgThumb"
        android:layout_below="@id/tvHomestay"
        android:id="@+id/tvDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:fontFamily="@font/nexabold"
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tvHomestay"
        android:layout_marginStart="26dp"
        android:layout_marginTop="-1dp"
        android:layout_toEndOf="@id/imgThumb"
        android:background="@drawable/bg_ubah"
        android:text="@string/ubah"
        android:textColor="#ffffff" />

    <Button
        android:textColor="#ffffff"
        android:padding="2dp"
        android:fontFamily="@font/nexabold"
        android:background="@drawable/bg_non"
        android:id="@+id/btnNonAktif"
        android:text="@string/nonaktifkan"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btnEdit"
        android:layout_below="@id/tvHomestay"
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:visibility="gone"
        android:textColor="#D84416"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvDeskripsi"
        android:text="@string/more"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgThumb"
        android:layout_below="@+id/tvDeskripsi"
        android:id="@+id/tvNavigasii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/notelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@+id/imgThumb"
        android:visibility="gone"
        android:id="@+id/tvIDKE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@+id/imgThumb"
        android:id="@+id/tvNon1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="#ffffff"
        android:fontFamily="@font/nexabold"
        android:background="@drawable/bg_non"
        android:visibility="gone"
        android:id="@+id/aktifkan12"
        android:layout_marginStart="190dp"
        android:layout_below="@+id/tvHomestay"
        android:text="Aktifkan"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

    <LinearLayout
        android:id="@+id/llManipulasi"
        android:visibility="gone"
        android:background="#7C829191"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" />

</RelativeLayout>
