<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/et_bg"
    android:padding="16dp"
    android:id="@+id/containerRR">

    <ImageView
        android:id="@+id/imgThumbRR"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/loading_shape"
        android:scaleType="fitXY" />

    <TextView
        android:fontFamily="@font/nexalight"
        android:id="@+id/konvensionall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imgThumbRR"
        android:background="#F97433"
        android:text="@string/res"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:fontFamily="@font/nexalight"
        android:layout_marginTop="5dp"
        android:textColor="#F97433"
        android:layout_below="@+id/konvensionall"
        android:text="@string/nama_homestay"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/tvHomestayRR"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/imgThumbRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:text="@string/deskripsi_homestay"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginTop="12dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@id/imgThumbRR"
        android:layout_below="@id/tvHomestayRR"
        android:id="@+id/tvDeskripsiRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/nexalight"
        android:textColor="#F97433"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvDeskripsiRR"
        android:text="@string/more"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgThumbRR"
        android:layout_below="@+id/tvDeskripsiRR"
        android:id="@+id/tvNavigasiiRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/notelpRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/emailRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/alamatRR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llManipulasi004"
        android:visibility="gone"
        android:background="#7C829191"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal" />

</RelativeLayout>
