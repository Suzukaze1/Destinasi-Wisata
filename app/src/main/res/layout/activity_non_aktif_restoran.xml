<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.admin.restoran.NonAktifRestoranActivity">

    <TextView
        android:textColor="#D94C3A"
        android:fontFamily="@font/nexabold"
        android:textSize="21sp"
        android:layout_centerInParent="true"
        android:id="@+id/tvWe"
        android:textAlignment="center"
        android:text="YAKIN INGIN MENONAKTIFKAN"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#D94C3A"
        android:fontFamily="@font/nexabold"
        android:gravity="center_horizontal"
        android:textSize="40sp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/tvWe"
        android:text=" ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tvWe"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#ffffff"
            android:fontFamily="@font/nexalight"
            android:id="@+id/btnIya04"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_ubah"
            android:text="Yakin" />

        <Button
            android:layout_marginBottom="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/bg_tidack"
            android:text="Tidak"
            android:id="@+id/btnTidak04"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvIdN003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tvIdNon003"
        android:layout_below="@+id/tvIdN003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>